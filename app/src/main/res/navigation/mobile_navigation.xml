<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.testmeals.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.testmeals.ui.search.SearchFragment"
        android:label="@string/search_fragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/resultsFragment"
        android:name="com.example.testmeals.ui.search.ResultsFragment"
        android:label="fragment_results"
        tools:layout="@layout/fragment_results" >
        <action
            android:id="@+id/action_resultsFragment_to_mealFragment"
            app:destination="@id/mealFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealFragment"
        android:name="com.example.testmeals.ui.meal.MealFragment"
        android:label="fragment_meal"
        tools:layout="@layout/fragment_meal" />
</navigation>